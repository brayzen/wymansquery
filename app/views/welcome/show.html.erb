
<h1>Query#</h1>
<%= link_to 'Make another query', '/' %>


  <table class="table">
    <tr class="row">
      <td class="cell">
        <strong>#<strong>
      </td>
    <% @keys.each do |key| %>
        <td class="cell">
          <strong><%= key %></strong>
        </td>
    <% end %>
    </tr>

    <%count = 1 %>
    <% @matches.each do |match| %>
      <tr class="row">
        <td class="cell">
          <%= count %>
        <% @keys.each do |key| %>
          <td class="cell">
            <% if key == "Published" || key == "Crawled" %>
              <%= Time.parse(match[key]).strftime("%m-%d-%Y") %>
            <% elsif key == "Url" %>
              <a href=<%=match[key]%>>Visit URL</a>
            <% elsif key == "Subject" || key == "Text" %>
              <%= match[key].gsub('[Keyword]','\*K*/').gsub('[/Keyword]', '') %>
            <% else %>
              <%= match[key] %>
            <% end %>
          </td>
        <% end %>
        <% count += 1 %>
      </tr>
    <% end %>

  </table>
